{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "removeComments": true,
    "noEmitOnError": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false, /* remove it in a near future */
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["/modules/node_modules/@types"],
    "outDir": "/modules/dist",
    "baseUrl": "/modules/node_modules/",
    "mapRoot": "/modules/mapRoot",

  },
  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : true
  },
  "include": [
    "/rapydo/src/main.ts",
    "/rapydo/src/polyfills.ts",
    "/rapydo/src/vendor.ts",
    "/app/frontend/custom.ts"

    // "/app/frontend/**/*",
    // "/rapydo/src/**/*"
  ]
}

